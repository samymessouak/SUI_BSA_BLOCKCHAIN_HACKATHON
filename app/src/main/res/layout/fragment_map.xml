<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingClass" />

    <!-- Brand Navigation Buttons -->
    <LinearLayout
        android:id="@+id/brand_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_mcdonalds"
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_mcdonalds"
            android:text="🍔 McDonald's"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <Button
            android:id="@+id/btn_nike"
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_nike"
            android:text="👟 Nike"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <Button
            android:id="@+id/btn_sephora"
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:background="@drawable/button_sephora"
            android:text="💄 Sephora"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

    </LinearLayout>

    <!-- Zoom Controls -->
    <LinearLayout
        android:id="@+id/zoom_controls_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_zoom_in"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_primary"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_zoom_out"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_secondary"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_rotate_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_primary"
            android:text="↶"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_rotate_right"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_primary"
            android:text="↷"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Zone legend -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lausanne Sticker Zones"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_legend_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="🍔 McDonald's (0/5)\n👟 Nike (0/10)\n💄 Sephora (0/15)"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
